{% extends 'WebProfilerBundle:Profiler:layout.html.twig' %}

{% block toolbar %}
<span style="white-space:nowrap; color:#2f2f2f; display:inline-block; min-height:24px; border-right:1px solid #cdcdcd; padding:5px 10px 5px 6px; ">
    <img width="15" height="28" alt="Logs" style="vertical-align: middle; margin-right: 10px;" src="data:image/png;base64,"/>
    <span>{{ collector.counterrors }}</span>
</span>
{% endblock %}

{% block menu %}
<span class="label">
    <span class="icon"><img src="{{ asset('bundles/webprofiler/images/profiler/logger.png') }}" alt="" /></span>
    <strong>Logs</strong>
    <span class="count">
        <span>{{ collector.counterrors }}</span>
    </span>
</span>
{% endblock %}

{% block panel %}
    <h2>Logs</h2>

    {% if collector.logs %}
        <ul class="alt">
            {% for i, log in collector.logs %}
                <li class="{{ i is odd ? 'odd' : 'even' }}{% if 'ERR' == log.priorityName %} error{% endif %}">
                    {{ log.priorityName }}
                    {{ log.message }}
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <em>No logs available.</em>
    {% endif %}
{% endblock %}
